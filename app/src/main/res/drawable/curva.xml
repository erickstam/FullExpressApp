<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Capa inferior (fondo con el color de fondo deseado) -->
    <item android:drawable="@android:color/white" />
    <!-- Capa superior (color de fondo del botón) -->
    <item android:right="4dp" android:left="4dp" android:top="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#021621" /> <!-- Color de fondo del botón -->
        </shape>
    </item>
</layer-list>