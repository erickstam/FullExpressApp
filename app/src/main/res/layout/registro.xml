<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registro">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="847dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="130dp"
            android:layout_height="20dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:text="Registro Full Expres." />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_marginLeft="325dp"
            android:layout_marginTop="-20dp"
            android:src="@drawable/logo" />

        <TextView
            android:layout_width="130dp"
            android:layout_height="20dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:text="Nombres:" />

        <EditText
            android:id="@+id/edt_nombres"
            android:layout_width="330dp"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittext_border_negro"
            android:ems="10"
            android:gravity="center"
            android:inputType="text" />

        <TextView
            android:layout_width="130dp"
            android:layout_height="20dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:text="Apellidos:" />

        <EditText
            android:id="@+id/edt_apellidos"
            android:layout_width="330dp"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittext_border_negro"
            android:ems="10"
            android:gravity="center"
            android:inputType="text" />

        <TextView
            android:layout_width="130dp"
            android:layout_height="20dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:text="Correo electronico:" />

        <EditText
            android:id="@+id/edt_correo"
            android:layout_width="330dp"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittext_border_negro"
            android:ems="10"
            android:gravity="center"
            android:inputType="text" />

        <TextView
            android:layout_width="130dp"
            android:layout_height="20dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:text="Usuario:" />

        <EditText
            android:id="@+id/edt_nombre_usuario"
            android:layout_width="330dp"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittext_border_negro"
            android:ems="10"
            android:gravity="center"
            android:inputType="text" />

        <TextView
            android:layout_width="160dp"
            android:layout_height="20dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:text="Fecha de Nacimiento:" />

        <EditText
            android:id="@+id/edtFechaNacimiento"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittext_border_negro"
            android:clickable="true"
            android:focusable="false"
            android:gravity="center"
            android:textSize="14dp" /> <!-- Para permitir la selección de fecha al hacer clic -->

        <TextView
            android:layout_width="130dp"
            android:layout_height="20dp"
            android:layout_marginLeft="245dp"
            android:layout_marginTop="-65dp"
            android:text="Edad:" />

        <EditText
            android:id="@+id/edtEdad"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_marginLeft="245dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittext_border_negro"
            android:ems="10"
            android:gravity="center"
            android:inputType="number" />

        <TextView
            android:layout_width="130dp"
            android:layout_height="20dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:text="Contraseña:" />

        <EditText
            android:id="@+id/edt_pass_registro"
            android:layout_width="330dp"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittext_border_negro"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPassword" />

        <TextView
            android:layout_width="190dp"
            android:layout_height="20dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:text="Confirmar Contraseña:" />

        <EditText
            android:id="@+id/edt_pass_confirmar"
            android:layout_width="330dp"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittext_border_negro"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btn_guardar_registro"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="75dp"
            android:backgroundTint="#ED1B24"
            android:text="Guardar" />

        <Button
            android:id="@+id/btn_cencelar_registro"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="#021621"
            android:text="Cancelar" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>